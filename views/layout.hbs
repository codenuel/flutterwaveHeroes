<body>
{{{body}}}



<!--footer-->
	<div class="footer">
		<p>&copy; 2018 Flutterwave Technical Heroes.</a></p>
	</div>
	<!--//footer-->
    <!--pop-up-grid-->
	<div id="popup">
		<div id="small-dialog" class="mfp-hide">
			<div class="signin-form profile">
				<h3>Checkout/Payment</h3>
				<div class="login-form">
					<form action="checkout" method="POST">
						<h4>Personal Info</h4>
						<input type="text" name="first_name" placeholder="Full Name" required="">
						<input type="email" name="email" placeholder="E-mail" required="">
						<input type="text" name="phone_number" placeholder="Contact Number" required="">

						<h4>Card Details</h4>
						<div class="row">
							<div class="col-md-12">
								<label for="">Card Number</label><br>
								<input type="number" placeholder="0000 0000 0000" class="cardNumb" required="">
							</div>
						</div>

						<div class="row">
							<div class="col-md-4 cdate">
								<label for="">MM/YY</label><br>
								<input type="month" name="" id="" class="cardDate" required="">
							</div>
							<div class="col-md-3 ccvv">
								<label for="">CVV</label><br>
								<input type="number" placeholder="345" class="cardCvv" required="">
							</div>
							<div class="col-md-12">
							<button class="btn btn-primary btn-block" id="submit">Pay <i class="fa fa-arrow-right"></i></button>
							</div>
						</div>
						
						{{!-- <input type="submit" value="Pay" id="submit" class=""> --}}

					</form>
				</div>
			</div>
		</div>
	</div>						
	<!--pop-up-grid-->

	<!-- jquery -->
	<script src="assets/js/jquery-2.1.4.min.js"></script>
	<!-- //jquery -->

	<!-- Pop-up for pricing tables -->

	<script src="assets/js/jquery.magnific-popup.js" type="text/javascript"></script>
	<script>
		$(document).ready(function() {
			$('.popup-with-zoom-anim').magnificPopup({
				type: 'inline',
				fixedContentPos: false,
				fixedBgPos: true,
				overflowY: 'auto',
				closeBtnInside: true,
				preloader: false,
				midClick: true,
				removalDelay: 300,
				mainClass: 'my-mfp-zoom-in'
		});
																						
	});
	</script>
	<!-- //Pop-up for pricing tables -->

</body>
</html>
